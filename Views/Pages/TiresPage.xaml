<Page
    x:Class="CourseProject.Views.Pages.TiresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseProject.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CourseProject.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="TiresPage"
    
    d:DataContext="{d:DesignInstance local:TiresPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="20">
            <ui:TextBlock Text="Модель"/>
            <ui:TextBox Text="{Binding ViewModel.Model}"/>

            <ui:TextBlock Text="Размер"/>
            <ui:TextBox Text="{Binding ViewModel.Size}"/>

            <ui:TextBlock Text="Тип"/>
            <ui:TextBox Text="{Binding ViewModel.Type}"/>

            <ui:TextBlock Text="Производитель"/>
            <ComboBox 
                ItemsSource="{Binding ViewModel.Companies}"
                SelectedItem="{Binding ViewModel.SelectedManufacturer}"
                DisplayMemberPath="Name"/>

            <ui:Button 
                Command="{Binding ViewModel.ConfirmCommand}" 
                Content="Подтвердить"
                HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Page>